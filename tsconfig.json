{
    "compilerOptions": {
        "jsx": "react",
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": false,
        "noUnusedLocals": false,
        "removeComments": false,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es6",
        "sourceMap": false,
        "outDir": "./dist"
    },
    "include": [
        "src/**/*",
        "index.ts"
    ],
    "exclude": [
        "node_modules",
        "src/__tests__",
        "**/*.spec.ts",
        "**/*.d.ts"
    ]
}